<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="200.0" minWidth="550.0"
            fx:controller="agh.ics.oop.presenter.StartPresenter">
    <top>
        <Label text="Darwin World D-3"/>
    </top>
    <center>
        <VBox>
            <HBox>
                <Label text="Map width:"/>
                <Spinner fx:id="mapWidth" max="1000" initialValue="10" editable="true"/>
            </HBox>
            <HBox>
                <Label text="Map height:"/>
                <Spinner fx:id="mapHeight" max="1000" initialValue="10" editable="true"/>
            </HBox>
            <HBox>
                <Label text="Number of animals at the start:"/>
                <Spinner fx:id="startAnimalsField" max="1000" initialValue="10" editable="true"/>
            </HBox>
            <HBox>
                <Label text="Number of plants at the start:"/>
                <Spinner fx:id="startPlantsField" initialValue="10" editable="true"/>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <VBox>
            <Label text="Click start to start the simulation."
                   textAlignment="CENTER"/>
            <Button text="Start" onAction="#onSimulationStartClicked"/>
        </VBox>
    </bottom>
</BorderPane>
